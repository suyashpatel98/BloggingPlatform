doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../favicon.ico')
    title Signin Template for Bootstrap
    // Bootstrap core CSS
    link(href='/stylesheet/bootstrap.min.css', rel='stylesheet')
    // IE10 viewport hack for Surface/desktop Windows 8 bug
    link(href='/stylesheet/ie10-viewport-bug-workaround.css', rel='stylesheet')
    // Custom styles for this template
    link(href='/stylesheet/signin.css', rel='stylesheet')
  body
    .container
      form.form-signin(method='POST', action='/signup')
        h2.form-signin-heading
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control(type='email', placeholder='email', required='', autofocus='', name='email')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(type='password', placeholder='password', required='', name='password')
        label.sr-only(for='inputName') Name
        input#inputName.form-control(type='text', placeholder='name', required='', name='name')
        .checkbox
          label
            input(type='checkbox', value='remember-me')
            |  Remember me
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
    // /container
